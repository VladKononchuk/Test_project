{% extends 'base.html.twig' %}

{% block title %} Posts {% endblock %}

{% block body %}
    <ul>
    {% for post in posts %}
        <li><a href="/description{{ post.id }}">{{ post.name }} </a>
            <br>
            <a href="/post/update{{ post.id }}"> <button type="button">Update</button> </a>
            <a href="/post/delete{{ post.id }}"> <button type="button">Delete</button> </a>
        </li>
        <br>
    {% endfor %}
    </ul>
    <a href="/post/create"> <button type="button">Create new Post</button> </a>
{% endblock %}

